<!DOCTYPE html>
<html lang="en">
<!-- HEAD -->
<%- include('partials/head') %> 
<link rel="stylesheet" href="/stylesheets/search.css">
</head>
<body>
    <div class="contenedor">
        <!-- HEADER -->
        <%- include('partials/header') %>
        <div class="banner2 fluid">
            <h2>BUSCÁ LO TUYO...</h2>
        </div>
        <main class="" >
            
            <div class="search-result-title">
                <h2>
                    Resultado de la búsqueda "<%=query  %> ":
                </h2>
            </div>
            <section>
                <% products.forEach(product => { %>
                    <article>
                        <div class="img-article-busqueda">
                            <a href="/detail/<%= product.id %> " class="link-imagen-article">
                                <img src="images/<%= product.image %> " alt="imagen-producto" class="imagenn">
                            </a>
                            <div class="caja-estado">
                                <p class="estado">
                                    <%if (product.condition) { %>
                                        NUEVO
                                    <%} %>
                                    <%if(!product.condition){%> 
                                        USADO
                                    <% } %> 
                                </p>
                            </div>
                        </div>
                        <div class="description">
                            <a href="/detail/<%= product.id %>" class="link-titulo-article">
                                <h3>
                                    <%= product.title %> 
                                </h3>
                            </a>
                            <p class="price">
                                <%= product.price %> 
                            </p>
                            <a href="/user/micarrito" class="caja-changuito">
                                <i class="fas fa-shopping-cart"></i>
                            </a>
                            
                        </div>
                    </article>
                <% }) %>


            </section>
        </main>
    <!-- FOOTER -->
    <%- include('partials/footer')%>
</body>
</html>